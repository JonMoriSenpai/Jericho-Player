{
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": ["jsdoc"]
    },
    "source": {
        "include": ["package.json", "README.md", "src"],
        "includePattern": ".js$",
        "excludePattern": "(node_modules/|docs|tests/)"
    },
    "plugins": [
        "plugins/markdown"
    ],
    "templates": {
        "cleverLinks": true,
        "monospaceLinks": true,
        "useLongnameInNav": true,
        "showInheritedInNav": true,
        "default": {
            "outputSourceFiles": true,
            "includeDate": true
        }
    },
    "opts": {
        "destination": "./gh-pages/",
        "encoding": "utf8",
        "private": false,
        "recurse": false,
        "template": "./node_modules/jsdoc-skyceil"
    }
}