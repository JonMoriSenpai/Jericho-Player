{
  "tags": {
    "allowUnknownTags": true,
    "dictionaries": ["jsdoc"]
  },
  "source": {
    "include": ["package.json", "README.md", "src"],
    "includePattern": ".js$",
    "excludePattern": "(node_modules/|docs|tests/)"
  },
  "plugins": [
    "plugins/markdown",
    "jsdoc-mermaid",
    "node_modules/better-docs/category"
  ],
  "templates": {
    "cleverLinks": true,
    "monospaceLinks": true,
    "useLongnameInNav": false,
    "showInheritedInNav": true,
    "default": {
      "outputSourceFiles": true,
      "includeDate": true
    }
  },
  "opts": {
    "private": false,
    "encoding": "utf8",
    "readme": "./readme.md",
    "destination": "docs/",
    "recurse": true,
    "verbose": true,
    "tutorials": "./tutorials",
    "template": "node_modules/better-docs/"
  }
}
